<h1>Edit</h1>

<%= form_for :task, url: task_path(@task), method: :patch do |f| %>

    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@task.errors.count, "error") %> prohibited
            this task from being saved:
          </h2>
          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.select(:project_id, Project.all.collect {|p| [ p.name, p.id ] }) %>

    <p>
      <%= f.label :taskname %><br>
      <%= f.text_field :taskname %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back', tasks_path %>